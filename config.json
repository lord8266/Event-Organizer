{
	"name": "event_organizer",
	"db": "event_organizer",
	"tables": {
		"users": "CREATE TABLE users(id VARCHAR(300) PRIMARY KEY,username VARCHAR(50) NOT NULL,email VARCHAR(50) NOT NULL UNIQUE,password VARCHAR(50) NOT NULL);"
	},
	"restart": "sudo service apache2 restart;sudo service mysql restart",
	"hosts": [
		"<VirtualHost *:80>",
		"    ServerAdmin webmaster@localhost ",
		"    DocumentRoot $1",
		"    <Directory \"$1\">",
		"        Options +Indexes",
		"        Allow from all",
		"        Allowoverride all",
		"        Order allow,deny",
		"        Require all granted",
		"    </Directory>",
		"    ErrorLog $2/error.log",
		"    CustomLog $2/access.log combined",
		"    php_flag display_errors on",
		"</VirtualHost>"
    ],
    "copy":"sudo cp $1 /etc/apache2/sites-available/",
	"enable":"sudo a2dissite 000-default.conf;sudo a2ensite $1",
	"dir":"www"
}
